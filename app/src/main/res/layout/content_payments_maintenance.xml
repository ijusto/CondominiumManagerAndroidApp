<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PaymentsMaintenance"
    tools:showIn="@layout/activity_payments_maintenance">

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:text="Payments"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/go_back_payments_maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/back_icon" />

    <ImageView
        android:id="@+id/check_payment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_payment"
        app:srcCompat="@mipmap/check_button" />

    <ImageView
        android:id="@+id/add_payment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/add_button" />

    <ImageView
        android:id="@+id/add_payment_rect_info"
        android:layout_width="304dp"
        android:layout_height="139dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="100dp"
        android:background="#8EABBE"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/payment_name_input"
        android:layout_width="175dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/payment_name"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_rect_info"
        app:layout_constraintStart_toEndOf="@+id/payment_name"
        app:layout_constraintTop_toTopOf="@+id/payment_name"
        app:layout_constraintVertical_bias="0.274" />

    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Amount: "
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/add_payment_rect_info"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_rect_info"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="@+id/add_payment_rect_info"
        app:layout_constraintTop_toTopOf="@+id/add_event_title"
        app:layout_constraintVertical_bias="0.901" />

    <TextView
        android:id="@+id/payment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Name: "
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/add_payment_rect_info"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_rect_info"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@+id/add_payment_rect_info"
        app:layout_constraintTop_toTopOf="@+id/add_event_title"
        app:layout_constraintVertical_bias="0.362" />

    <TextView
        android:id="@+id/add_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Add Event"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_payment_rect_info"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_rect_info"
        app:layout_constraintStart_toStartOf="@+id/add_payment_rect_info"
        app:layout_constraintTop_toTopOf="@+id/add_payment_rect_info"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/payment_amount_input"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/payment_amount"
        app:layout_constraintEnd_toEndOf="@+id/add_payment_rect_info"
        app:layout_constraintStart_toEndOf="@+id/payment_amount"
        app:layout_constraintTop_toTopOf="@+id/payment_amount" />

</android.support.constraint.ConstraintLayout>