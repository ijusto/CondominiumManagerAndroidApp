<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.condominiummanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".Events"
            android:label="@string/title_activity_events"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Report"
            android:label="@string/title_activity_report"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Readings"
            android:label="@string/title_activity_readings"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Thankyou"
            android:label="@string/title_activity_thankyou"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Manager"
            android:label="@string/title_activity_manager"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Maintenance"
            android:label="@string/title_activity_maintenance"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Tenant"
            android:label="@string/title_activity_tenant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>